<%- include('layouts/admin-layout', { 
  pageTitle: 'Item Management',
  activeTab: 'items',
  body: `
    <div class="items-container">
      <div class="items-header">
        <h2>Criminal List Management</h2>
        <div class="items-controls">
          <div class="search-container">
            <input type="text" id="search-input" placeholder="Search Criminal..." class="search-input" onkeypress="if(event.key==='Enter') window.AdminManager.searchItems()">
            <button class="search-btn" onclick="window.AdminManager.searchItems()" title="Search">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M21 21L16.514 16.506L21 21ZM19 10.5C19 15.194 15.194 19 10.5 19C5.806 19 2 15.194 2 10.5C2 5.806 5.806 2 10.5 2C15.194 2 19 5.806 19 10.5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
            <button class="clear-btn" onclick="window.AdminManager.clearSearch()" title="Clear search" style="display: none;" id="clear-search-btn">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
          </div>
          <div class="view-controls">
            <button class="view-btn active" data-view="list" onclick="window.AdminManager.setView('list')">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M8 6H21M8 12H21M8 18H21M3 6H3.01M3 12H3.01M3 18H3.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              List
            </button>
            <button class="view-btn" data-view="grid" onclick="window.AdminManager.setView('grid')">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M3 3H10V10H3V3ZM14 3H21V10H14V3ZM3 14H10V21H3V14ZM14 14H21V21H14V14Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              Grid
            </button>
            <div class="grid-controls" id="grid-controls" style="display: none;">
              <select id="grid-columns" onchange="window.AdminManager.setGridColumns(this.value)">
                <option value="2">2</option>
                <option value="3" selected>3</option>
                <option value="4">4</option>
              </select>
            </div>
          </div>
        </div>
      </div>

        <div class="items-content">
          <div class="items-navigation">
            <button class="nav-btn" id="prev-btn" onclick="window.AdminManager.previousPage()" disabled>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              Previous
            </button>
            <div class="page-info">
              <span id="page-info">Page 1 of 1</span>
              <span id="total-items-info">(0 total items)</span>
            </div>
            <button class="nav-btn" id="next-btn" onclick="window.AdminManager.nextPage()" disabled>
              Next
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
          </div>

          <div class="items-header-row">
            <div class="header-name" data-sort="name" onclick="window.AdminManager.setSort('name')" style="cursor: pointer;">Name</div>
            <div class="header-status" data-sort="status" onclick="window.AdminManager.setSort('status')" style="cursor: pointer;">Status</div>
            <div class="header-category" data-sort="category" onclick="window.AdminManager.setSort('category')" style="cursor: pointer;">Category</div>
            <div class="header-v1" data-sort="v1" onclick="window.AdminManager.setSort('v1')" style="cursor: pointer;">V1</div>
            <div class="header-v2" data-sort="v2" onclick="window.AdminManager.setSort('v2')" style="cursor: pointer;">V2</div>
            <div class="header-actions">Actions</div>
          </div>

          <div class="items-list" id="items-list">
            <div class="loading-indicator">Loading items...</div>
          </div>

        <div class="items-navigation">
          <button class="nav-btn" id="prev-btn-bottom" onclick="window.AdminManager.previousPage()" disabled>
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Previous
          </button>
          <div class="page-info">
            <span id="page-info-bottom">Page 1 of 1</span>
            <span id="total-items-info-bottom">(0 total items)</span>
          </div>
          <button class="nav-btn" id="next-btn-bottom" onclick="window.AdminManager.nextPage()" disabled>
            Next
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Item Editor Modal -->
    <div class="modal-overlay" id="item-editor-modal" style="display: none;">
      <div class="modal-content">
        <div class="modal-header">
          <h3>Edit Item</h3>
          <button class="modal-close" onclick="window.AdminManager.closeItemEditor()">
            <i class="icon-close"></i>
          </button>
        </div>
        <div class="modal-body">
          <form id="item-editor-form">
            <input type="hidden" id="edit-item-id">
            
            <div class="form-group">
              <label for="edit-item-name">Name</label>
              <input type="text" id="edit-item-name" class="form-input">
            </div>
            
            <div class="form-group">
              <label for="edit-item-status">Status</label>
              <select id="edit-item-status" class="form-select">
                <option value="deceased">Deceased</option>
                <option value="active">Active</option>
                <option value="incarcerated">Incarcerated</option>
                <option value="redacted">Redacted</option>
                <option value="unknown">Unknown</option>
                <option value="captured">Captured</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="edit-item-category">Category</label>
              <select id="edit-item-category" class="form-select">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Company">Company</option>
                <option value="Group">Group</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="edit-item-v1">V1</label>
              <input type="number" id="edit-item-v1" class="form-input" min="0" max="200">
            </div>
            
            <div class="form-group">
              <label for="edit-item-v2">V2</label>
              <input type="number" id="edit-item-v2" class="form-input" min="0" max="200">
            </div>
            
            <div class="form-actions">
              <button type="button" class="btn-secondary" onclick="window.AdminManager.closeItemEditor()">
                Cancel
              </button>
              <button type="submit" class="btn-primary">
                Save Changes
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  `
}) %>
