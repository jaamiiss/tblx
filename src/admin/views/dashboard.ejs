<%- include('layouts/admin-layout', { 
  pageTitle: 'Admin Dashboard',
  activeTab: 'dashboard',
  body: `
    <div class="dashboard-container">
      <div class="dashboard-header">
        <h2>Dashboard Overview</h2>
        <div class="connection-status" id="connection-status-dashboard">
          <span class="status-indicator">Connected</span>
        </div>
        <div class="dashboard-stats">
          <div class="stat-card">
            <div class="stat-number" id="total-items">${totalItems}</div>
            <div class="stat-label">Total Items</div>
          </div>
          <div class="stat-card" id="quota-status-card" style="display: none;">
            <div class="stat-number quota-error">⚠️</div>
            <div class="stat-label">Quota Exceeded</div>
          </div>
          <div class="stat-card">
            <div class="stat-number" id="last-updated">Just now</div>
            <div class="stat-label">Last Updated</div>
          </div>
        </div>
      </div>

      <div class="dashboard-content">
        <div class="dashboard-section" id="quota-status-section" style="display: none;">
          <h3>Database Status</h3>
          <div class="quota-exceeded-message" id="quota-exceeded-message">
            <div class="quota-warning">
              <i class="icon-warning"></i>
              <strong>Firestore Quota Exceeded</strong>
            </div>
            <p>The database quota has been exceeded. Some features may be limited until the quota resets.</p>
            <div class="quota-actions">
              <button class="action-btn secondary" onclick="window.AdminManager.checkQuotaStatus()">
                <i class="icon-refresh"></i>
                Check Status
              </button>
              <button class="action-btn secondary" onclick="window.AdminManager.clearCache()">
                <i class="icon-clear"></i>
                Clear Cache
              </button>
            </div>
          </div>
        </div>

        <div class="dashboard-section">
          <h3>Quick Actions</h3>
          <div class="action-buttons">
            <button class="action-btn" onclick="window.AdminManager.loadAllItems()">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M1 4V10H7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M23 20V14H17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M20.49 9A9 9 0 0 0 5.64 5.64L1 10M23 14L18.36 18.36A9 9 0 0 1 3.51 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              Refresh Data
            </button>
            <button class="action-btn" onclick="window.AdminManager.clearCache()">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M3 6H5H21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M8 6V4C8 3.46957 8.21071 2.96086 8.58579 2.58579C8.96086 2.21071 9.46957 2 10 2H14C14.5304 2 15.0391 2.21071 15.4142 2.58579C15.7893 2.96086 16 3.46957 16 4V6M19 6V20C19 20.5304 18.7893 21.0391 18.4142 21.4142C18.0391 21.7893 17.5304 22 17 22H7C6.46957 22 5.96086 21.7893 5.58579 21.4142C5.21071 21.0391 5 20.5304 5 20V6H19Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              Clear Cache
            </button>
            <button class="action-btn" onclick="window.AdminManager.warmCache()">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M2 17L12 22L22 17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M2 12L12 17L22 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              Warm Cache
            </button>
            <button class="action-btn" onclick="window.AdminManager.exportData()">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M21 15V19C21 19.5304 20.7893 20.0391 20.4142 20.4142C20.0391 20.7893 19.5304 21 19 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M7 10L12 15L17 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M12 15V3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              Export Data
            </button>
            <button class="action-btn debug-btn" onclick="window.AdminManager.toggleDebugMode()">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 9H15V15H9V9Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M12 3V6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M12 18V21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M3 12H6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M18 12H21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M4.22 4.22L6.34 6.34" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M17.66 17.66L19.78 19.78" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M4.22 19.78L6.34 17.66" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M17.66 6.34L19.78 4.22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              Debug Mode
            </button>
          </div>
        </div>

        <div class="dashboard-main-content">
        <div class="dashboard-section">
          <h3>Quick Links</h3>
          <div class="quick-links">
            <a href="/list/" class="quick-link-card">
                <div class="quick-link-icon">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M9 12L11 14L15 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
              <div class="quick-link-content">
                <h4>V1 List</h4>
                <p>View Version 1 list</p>
              </div>
            </a>
            <a href="/list/v2" class="quick-link-card">
                <div class="quick-link-icon">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M3 3V21H21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M9 9L12 6L16 10L20 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
              <div class="quick-link-content">
                <h4>V2 List</h4>
                <p>View Version 2 list</p>
              </div>
            </a>
            <a href="/the-blacklist" class="quick-link-card">
                <div class="quick-link-icon">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M2 17L12 22L22 17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M2 12L12 17L22 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
              <div class="quick-link-content">
                <h4>Old List</h4>
                <p>View The Blacklist</p>
              </div>
            </a>
            <a href="/stats" class="quick-link-card">
                <div class="quick-link-icon">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M18 20V10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M12 20V4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M6 20V14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
              <div class="quick-link-content">
                <h4>Stats</h4>
                <p>View statistics</p>
              </div>
            </a>
            <a href="/list/deceased" class="quick-link-card">
                <div class="quick-link-icon">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M9 12L11 14L15 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
              <div class="quick-link-content">
                <h4>List Status</h4>
                <p>View list status page</p>
              </div>
            </a>
          </div>
        </div>

          <div class="dashboard-section charts-section">
          <h3>Status Distribution</h3>
          <div class="status-chart" id="status-chart">
            <div class="loading-indicator">Loading status distribution...</div>
            </div>
            
            <h3>Category Distribution</h3>
            <div class="category-chart" id="category-chart">
              <div class="loading-indicator">Loading category distribution...</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  `
}) %>
