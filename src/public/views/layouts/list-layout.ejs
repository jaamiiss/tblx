<%- include('../partials/head', { title: title, includeListCSS: true, includeItemRenderer: true, includeDemoManager: true }) %>
<body<% if (typeof customStyling !== 'undefined' && customStyling) { %> class="<%= customStyling %>"<% } %>>
  <%- include('../partials/header') %>
  
  <!-- Demo Banner -->
  <%- include('../partials/demo-banner') %>
  
  <!-- Reusable List Components -->
  <%- include('../partials/list-components', {
    activeTab: activeTab,
    descriptions: descriptions,
    hideToggleButtons: hideToggleButtons
  }) %>
  
  <div class="list-container">
    <div id="dataList" 
         hx-get="<%= apiEndpoint %>" 
         hx-trigger="load" 
         hx-indicator="#listSpinner"
         style="position: relative; min-height: 200px;">
      
      <!-- List Loading Spinner -->
      <%- include('../partials/reusable-spinner', { 
        id: 'listSpinner', 
        text: 'Loading list items...',
        size: 'medium',
        color: 'red'
      }) %>
      
      <!-- List items will be loaded here -->
    </div>
  </div>

  <script src="/assets/js/core/index.js"></script>
  
  <!-- Enhanced Common Scripts -->
  <%- include('../partials/enhanced-common-scripts') %>
  
  <!-- List-Specific Scripts -->
  <%- include('../partials/list-specific-scripts') %>
</body>
</html>
