<%- include('partials/head', { title: typeof title !=='undefined' ? title : 'Error' , includeListCSS: true }) %>

  <body class="seizure-mode">
    <div class="seizure-container">
      <div class="seizure-header">
        <h2>The Blacklist / FBI Joint Task Force</h2>
      </div>

      <div class="seizure-stamp">
        RESTRICTED ACCESS
      </div>

      <h1 class="seizure-title">
        <%= (typeof title !=='undefined' ? title : 'ERROR' ).toUpperCase() %>
      </h1>

      <div class="seizure-message">
        <%= typeof message !=='undefined' ? message : 'Unauthorized access attempt detected.' %>
      </div>

      <p class="seizure-text">
        This resource has been seized or is classified under <strong>Title 18, United States Code, Section
          1030</strong>.
        Unauthorized access attempts are monitored and will be reported to the Task Force.
        <br><br>
        <strong>IP ADDRESS LOGGED:</strong>
        <span class="seizure-ip">
          <%= (Math.floor(Math.random() * 255) + 1) + "." + (Math.floor(Math.random() * 255)) + "." +
            (Math.floor(Math.random() * 255)) + "." + (Math.floor(Math.random() * 255)) %>
        </span>
      </p>

      <div class="seizure-btn-wrapper">
        <a href="/" class="seizure-btn">RETURN TO SAFETY</a>
      </div>
    </div>
  </body>

  </html>